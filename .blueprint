created:
    - database/factories/PostFactory.php
    - database/factories/TagFactory.php
    - database/factories/CommentFactory.php
    - database/factories/ReplyFactory.php
    - database/migrations/2025_08_05_235705_create_posts_table.php
    - database/migrations/2025_08_05_235706_create_tags_table.php
    - database/migrations/2025_08_05_235707_create_comments_table.php
