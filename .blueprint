models:
    User: { name: string, email: string, email_verified_at: 'timestamp nullable', password: string, remember_token: 'string:100 nullable' }
    Post: { title: string100, slug: string150, content: text, user_id: 'id unsigned foreign ondelete:cascade', tag_id: 'id unsigned foreign nullable', created_at: timestamp, updated_at: 'timestamp onupdate:current_timestamp', timestamps: false, relationships: { belongsTo: User, hasMany: Tag } }
    Tag: { tag_name: string100, created_at: timestamp, updated_at: 'timestamp onupdate:current_timestamp', timestamps: false, relationships: { belongsToMany: Post } }
    Comment: { content: text, user_id: 'id unsigned foreign ondelete:cascade', post_id: 'id unsigned foreign nullable', created_at: timestamp, updated_at: 'timestamp onupdate:current_timestamp', timestamps: false, relationships: { belongsTo: 'User,Post' } }
    Reply: { content: text, user_id: 'id unsigned foreign ondelete:cascade', comment_id: 'id unsigned foreign nullable', created_at: timestamp, updated_at: 'timestamp onupdate:current_timestamp', timestamps: false, relationships: { belongsTo: 'User,Comment' } }
